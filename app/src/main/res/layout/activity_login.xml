<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginback"
    android:orientation="vertical"
    tools:context="endsstudios.firebasegroupchat.Login">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/chat"
        android:layout_width="165dp"
        android:layout_height="165dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="12sp"
            android:maxLines="1"
            android:id="@+id/lgn_Email"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/hintemail"
            android:layout_marginTop="30dp"
            android:background="@drawable/lgn_edtxt"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:textSize="12sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:id="@+id/lgn_Password"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/hintpass"
            android:layout_marginTop="30dp"
            android:background="@drawable/lgn_edtxt"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/lgnBtn"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="@string/loginbtn"
            android:background="@drawable/lgn_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/registerTxt"
            android:id="@+id/registerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>




</LinearLayout>
